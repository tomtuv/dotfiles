{
  "[liquid]": {
    "editor.defaultFormatter": "Shopify.theme-check-vscode"
  },
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "[smarty]": {
    "editor.defaultFormatter": "aswinkumar863.smarty-template-support"
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "css.validate": false,
  "diffEditor.ignoreTrimWhitespace": true,
  "editor.accessibilitySupport": "off",
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "ui-monospace, SFMono-Regular, monospace",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.inlineSuggest.enabled": true,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.suggest.preview": true,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.unusualLineTerminators": "auto",
  "emmet.includeLanguages": {
    "astro": "html",
    "liquid": "html",
    "nunjucks": "html",
    "postcss": "css"
  },
  "emmet.syntaxProfiles": {
    "postcss": "css"
  },
  "eslint.validate": [
    "astro",
    "html",
    "javascript",
    "javascriptreact",
    "markdown",
    "svelte",
    "typescript",
    "typescriptreact",
    "vue"
  ],
  "explorer.confirmDragAndDrop": false,
  "files.insertFinalNewline": true,
  "git.autofetch": true,
  "git.ignoreRebaseWarning": true,
  "git.mergeEditor": true,
  "git.terminalGitEditor": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false,
    "javascript": true,
    "javascriptreact": true,
    "postcss": true,
    "yaml": true
  },
  "githubPullRequests.pullBranch": "always",
  "gitlens.codeLens.scopes": ["document"],
  "javascript.updateImportsOnFileMove.enabled": "always",
  "less.validate": false,
  "livePreview.autoRefreshPreview": "On Changes to Saved Files",
  "livePreview.openPreviewTarget": "External Browser",
  "markdownShortcuts.languages": ["markdown", "mdx"],
  "postcss.validate": false,
  "redhat.telemetry.enabled": false,
  "scss.validate": false,
  "security.workspace.trust.untrustedFiles": "open",
  "stylelint.validate": [
    "astro",
    "css",
    "html",
    "less",
    "php",
    "postcss",
    "scss",
    "svelte",
    "vue",
    "xml"
  ],
  "svelte.enable-ts-plugin": true,
  "terminal.external.osxExec": "Hyper.app",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "terminal.integrated.profiles.osx": {
    "zsh": { "path": "/bin/zsh", "args": ["-l", "-i"] }
  },
  "totalTypeScript.hideAllTips": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "window.autoDetectColorScheme": true,
  "window.closeWhenEmpty": true,
  "window.commandCenter": true,
  "window.newWindowDimensions": "inherit",
  "workbench.colorTheme": "GitHub Light Default",
  "workbench.editor.historyBasedLanguageDetection": true,
  "workbench.preferredDarkColorTheme": "GitHub Dark Dimmed",
  "workbench.preferredHighContrastColorTheme": "GitHub Light High Contrast",
  "workbench.preferredLightColorTheme": "GitHub Light Default"
}
