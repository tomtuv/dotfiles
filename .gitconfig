[user]
	name = Thomas Tuvignon
	email = thomas.tuvignon@ultro.fr
	signingkey = F2E9E6EF7221664F

[core]
	excludesFile = /Users/thomastuvignon/.gitignore
	editor = nvim

[alias]
	aa = add -A
	ap = !git add -N . && git add -p
	ca = commit --amend --no-edit
	fd = !git branch --v | grep \"\\[gone\\]\" | awk \"{print $1}\" | xargs git branch -D
	lg = log --oneline --graph --decorate --all
	pf = push --force-with-lease
	rh = reset --hard
	si = stash --include-untracked
	ss = status -sb

[init]
	defaultBranch = main

[commit]
	gpgsign = true

[push]
	autoSetupRemote = true

[merge]
	tool = vscode

[mergetool "vscode"]
	cmd = code --wait --merge $REMOTE $LOCAL $BASE $MERGED

[diff]
	tool = vscode

[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE
	trustExitCode = true
